{
  "compilerOptions": {
    "lib": ["ES2021"],
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,

    "resolveJsonModule": true,
    "declaration": true,
    "noEmit": true,
    "outDir": "lib"
  },
  "include": ["./src/**/*"]
}
